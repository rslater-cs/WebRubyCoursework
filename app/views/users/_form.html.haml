%script{:src => "application.js"}
= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .user_form
    #login
      .field
        = f.label :email
        %br
        = f.text_field :email, :name => "user[email]"
      .field
        = f.label :password
        %br
        = f.password_field :password, :name => "user[password]"
      .actions
        %br
        = f.submit 'Submit', :class => "submit", :id => "enter_details"
