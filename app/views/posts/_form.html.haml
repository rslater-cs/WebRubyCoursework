= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :image
    = f.text_field :image
  .field
    = f.label :dateposted
    = f.date_select :dateposted
  .actions
    = f.submit 'Save'
