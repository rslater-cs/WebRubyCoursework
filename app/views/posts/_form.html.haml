= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :content
    %br
    = f.text_area :content
  .field
    = f.label :image
    %br
    = f.file_field :image, :accept => "image/*"
  .actions
    = f.submit 'Save'
