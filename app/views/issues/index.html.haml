%h1 Listing issues

%table
  %thead
    %tr
      %th Name
      %th Email
      %th Telephone
      %th Message
      %th Closed
      %th
      %th
      %th

  %tbody
    - @issues.each do |issue|
      %tr
        %td= issue.name
        %td= issue.email
        %td= issue.telephone
        %td= issue.message
        %td= issue.closed
        %td= link_to 'Show', issue
        %td= link_to 'Edit', edit_issue_path(issue)
        %td= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Issue', new_issue_path
